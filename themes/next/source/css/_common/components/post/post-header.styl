.posts-expand .post-header {
  font-size: $font-size-large;
}

.posts-expand .post-title {
  font-weight: $font-weight-normal;
  margin: initial;
  margin-top:-20px;
  text-align: center;
  word-wrap();

  if (hexo-config('post_edit.enable')) {
    .post-edit-link {
      border-bottom: none;
      color: $grey;
      display: inline-block;
      float: right;
      font-size: $font-size-larger;
      margin-left: -1.2em;
      the-transition-ease-in();

      +mobile-small() {
        margin-left: initial;
      }

      &:hover {
        color: black;
      }
    }
  }
}

.posts-expand .post-title-link {
  border-bottom: none;
  color: $black-light;
  display: inline-block;
  position: relative;
  vertical-align: top;
  transition: all 0.6s; 

  &::before {
    background: black;
    bottom: 0;
    content: '';
    height: 2px;
    left: 0;
    position: absolute;
    transform: scaleX(0);
    visibility: hidden;
    width: 100%;
    the-transition();
  }

  &:hover::before {
    transform: scaleX(1);
    visibility: visible;
  }
  &:hover {
    -moz-text-shadow:2px 2px 5px #333333;
    -webkit-text-shadow:2px 2px 5px #333333;
    text-shadow:2px 2px 5px #333333;
    -webkit-transform:translate(5px,0px);
  }

  .fa {
    font-size: $font-size-small;
    margin-left: 5px;
  }
}

.posts-expand .post-meta {
  color: $blue;
  font-family: $font-family-posts;
  font-size: $font-size-smallest;
  margin: 3px 0 20px 0;
  text-align: center;

  .post-description {
    font-size: $font-size-small;
    margin-top: 2px;
    text-align: left;
    text-indent: 2em;
  }
  .post-description p{
    font-size: $font-size-small;
    margin-top: 2px;
    text-align: left;
    text-indent: 2em;
  }

  time {
    border-bottom: 1px dashed $blue;
    cursor: pointer;
  }

  time&:hover {
    color: $orange;
  }
}

.post-meta .post-meta-item + .post-meta-item::before {
  content: '|';
  margin: 0 .5em;
}

.post-meta-divider {
  margin: 0 .5em;
}

.post-meta-item-icon {
  margin-right: 3px;

  +tablet-mobile() {
    display: inline-block;
  }
}

.post-meta-item-text {
  if (!hexo-config('post_meta.item_text')) {
    display: none;
  }

  +tablet-mobile() {
    display: none;
  }
}
